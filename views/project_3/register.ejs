<%- include('../partials/header.ejs') %> <!-- header -->
<main class="main">
    <div class="container">
        <div class="row">
            <div class="card bookCard col-12">
                <% if (locals.loginOrRegisterMessage !== undefined) { %>
                    <h1><%= loginOrRegisterMessage %></h1>
                <% } else { %>
                    <h1>Register</h1>
                <% } %>
                <form action="/register" method="post">
                    <p>Friendly reminder: Don't enter your actual password, create a fun one.</p>
                    <div class="row">
                        <div class="card bookCard col-xxl-6 col-xl-6 col-lg-7 col-md-10 col-sm-12">
                            <input name="username" placeholder="Enter your username" autocomplete="off" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="card bookCard col-xxl-6 col-xl-6 col-lg-7 col-md-10 col-sm-12">
                            <input type="email" name="user_email" placeholder="Enter your e-mail" autocomplete="off" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="card bookCard col-xxl-6 col-xl-6 col-lg-7 col-md-10 col-sm-12">
                            <input type="password" name="userPassword" placeholder="Enter your Password" autocomplete="off" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="card bookCard col-xxl-1 col-xl-1 col-lg-2 col-md-3 col-sm-3">
                            <input type="hidden" name="_method" value="PATCH">
                            <button type="submit">Register</button>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="card bookCard social-block">
                          <div class="card-body">
                            <a class="btn btn-block" href="/auth/google" role="button">
                              <i class="fab fa-google"></i>
                              Sign Up with Google
                            </a>
                          </div>
                        </div>
                      </div>
                </form>
            </div>
        </div>
    </div>
</main>
<%- include('../partials/footer.ejs') %> <!-- footer -->